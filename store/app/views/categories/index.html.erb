<h3>Categories</h3>
<div>
	<ul>
	  <% @categories.each do |c| %>
	    <li>
	      <%= link_to c.name, category_path(c) %>
	    </li>
	  <% end %>
	</ul>
</div>
<%= button_to "Create New Category", new_categories_path, method: :get, class: "btn btn-md btn-primary" %>
<%= button_to "Home", root_path, method: :get, class: "btn btn-md btn-primary" %>		